{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Team list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Title</th>
                <th>Titleen</th>
                <th>Bio</th>
                <th>Bioen</th>
                <th>Twitter</th>
                <th>Linkedin</th>
                <th>Category</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('team_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.titleEn }}</td>
                <td>{{ entity.bio }}</td>
                <td>{{ entity.bioEn }}</td>
                <td>{{ entity.twitter }}</td>
                <td>{{ entity.linkedin }}</td>
                <td>{{ entity.category }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('team_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('team_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('team_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
